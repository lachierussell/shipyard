# Combined frontend + backend proxy config with SSL (auto-generated by Shipyard)

# HTTP -> HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name <%.Domain%>;

    location /.well-known/acme-challenge/ {
        root <%.AcmeWebroot%>;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS server
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name <%.Domain%>;

    ssl_certificate <%.SSLCert%>;
    ssl_certificate_key <%.SSLKey%>;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    # Frontend static files
    root <%.FrontendRoot%>/$frontend_version;
    index index.html;

    # Backend proxy - strip <%.ProxyPath%> prefix and forward to backend
    location <%.ProxyPath%>/ {
        rewrite ^<%.ProxyPath%>/(.*)$ /$1 break;
        proxy_pass http://127.0.0.1:<%.ListenPort%>;
        proxy_http_version 1.1;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass_request_headers on;
        client_max_body_size 0;

        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Don't restrict framing
        proxy_hide_header X-Frame-Options;
    }

    # SPA fallback for frontend routes
    location / {
        try_files $uri $uri/ /index.html;
    }
}
